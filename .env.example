# Copy this file to .env and fill with production values

# Django
DJANGO_SECRET_KEY=replace-me-with-a-secure-key
DEBUG=False
ALLOWED_HOSTS=your-domain.com

# Database (for production use Cloud SQL or other managed DB)
DATABASE_URL=sqlite:///db.sqlite3

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@example.com

# Cache (for production use Redis)
CACHE_URL=locmem://

# Google Cloud
GCLOUD_PROJECT=your-gcloud-project-id
GCP_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account.json
